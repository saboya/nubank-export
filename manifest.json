{
  "manifest_version": 2,

  "name": "Nubank Export",
  "description": "Esta extensão adiciona um botão que exporta a sua fatura no formato CSV.",
  "version": "0.1",
  "icons": {
    "16": "nubank16.png",
    "48": "nubank48.png",
    "128": "nubank128.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://conta.nubank.com.br/*"],
      "js": ["request-listener.js","FileSaver.js","main-script.js","buttons.js"]
    }
  ]
}